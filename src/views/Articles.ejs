<style>

    .Main{
        display: flex;
        align-items: center;
        background-color: var(--principal-color);
        width: fit-content;
        padding: 1em;
        margin: 6em auto 0 auto;
    }

    .Main__image{ width: 16em }

    .Main__image img{ width: 100%; height: 100%; object-fit: cover; object-position: middle; }

    .p{ margin-top: 2px; color: rgb(126, 125, 125) }

    .button{
        border: .1em solid var(--secundary-color);
        background-color: transparent;
        font-weight: 600;
        padding: .2em .5em;
        cursor: pointer;
    }
    .button a{  color: var(--secundary-color); font-size: 1.5em  }

    @media screen and (max-width:900px){
        .Main{ width: 80% }
        .Main__image{ width: 13em }
    }

    @media screen and (max-width:700px){
        .Main{ width: 80% }
        .Main__image{ width: 13em }
        .h1{ font-size: 1.5em }
        .p{ font-size: .8em }
    }

    @media screen and (max-width:500px){
        .Main{ width: 90% }
        .button a{ font-size: 1em; }
    }

</style>